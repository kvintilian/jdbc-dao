<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="001" author="johndoe">
        <createTable tableName="customers">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="int">
                <constraints checkConstraint="age > 0"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints unique="true"/>
            </column>
        </createTable>

        <createTable tableName="orders">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="timestamp" defaultValueDate="now()"/>
            <column name="product_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="int">
                <constraints foreignKeyName="fk_customer_id" references="customers(id)"/>
            </column>
            <column name="amount" type="int">
                <constraints checkConstraint="amount > 0"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>